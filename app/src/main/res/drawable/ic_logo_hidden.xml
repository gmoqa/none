<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/elevation effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000" />
            <size
                android:width="28dp"
                android:height="28dp" />
        </shape>
    </item>

    <!-- Circular white background with border -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
            <size
                android:width="26dp"
                android:height="26dp" />
        </shape>
    </item>

    <!-- Black and white icon centered with padding -->
    <item
        android:top="5dp"
        android:bottom="6dp"
        android:left="5dp"
        android:right="5dp">
        <bitmap
            android:src="@drawable/icon_wb"
            android:gravity="center" />
    </item>
</layer-list>
