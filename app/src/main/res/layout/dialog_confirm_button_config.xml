<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_configuration_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_configuration_subtitle"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <!-- Preview Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Label Preview -->
            <TextView
                android:id="@+id/tvPreviewLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Label del botÃ³n"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:layout_marginBottom="12dp" />

            <!-- Audio Preview Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPreviewAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_play_audio"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="start"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_more"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_save"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>
